<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.InformationActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="106dp"
                    android:layout_height="52dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/less_consumo_logo" />

                <Button
                    android:id="@+id/buttonBackInformation"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/ic_back" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/colorBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="2dp"
                android:text="Information"
                android:textAllCaps="true"
                android:textColor="@color/colorMain"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:paddingVertical="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:padding="2dp"
                    android:text="Shipping"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edittext_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:hint="First name"
                    android:inputType="textPersonName"/>

                <EditText
                    android:id="@+id/edittext_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:hint="Last name"
                    android:inputType="textPersonName"/>

                <EditText
                    android:id="@+id/edittext_addressLine1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_edittext"
                    android:gravity="start"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:hint="Complete address"
                    android:inputType="textPostalAddress"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edittext_city"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_edittext"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        android:hint="City"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:inputType="textPostalAddress"/>

                    <EditText
                        android:id="@+id/edittext_state"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_edittext"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        android:hint="State"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:inputType="textPostalAddress"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edittext_zip"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_edittext"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        android:hint="Postal code"
                        android:maxLength="4"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1.5"
                        android:inputType="number"/>

                    <EditText
                        android:id="@+id/edittext_country"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_edittext"
                        android:gravity="start"
                        android:padding="8dp"
                        android:hint="Country"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:padding="2dp"
                    android:text="Billing"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edittext_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"/>

                <EditText
                    android:id="@+id/edittext_mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_edittext"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:hint="Mobile number"
                    android:maxLength="11"
                    android:inputType="number"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="12sp"
                    android:checked="true"
                    android:clickable="false"
                    android:text="Billing address is same as shipping address"/>

            </LinearLayout>

            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="32dp"
                android:background="@drawable/background_button_colored"
                android:text="CONTINUE TO SHIPPING"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>